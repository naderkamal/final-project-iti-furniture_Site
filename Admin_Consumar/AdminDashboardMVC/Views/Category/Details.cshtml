@model AdminDashboardMVC.Models.Category

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1>Details</h1>
    <hr>
    <div class="card mb-3" style="max-width: 700px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.Image" class="img-fluid rounded-start" alt="Category Image">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.Description)</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning " })
        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
    </div>
</div>