@model AdminDashboardMVC.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1>Details</h1>
    <hr>
    <div class="card mb-3" style="max-width: 700px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.Image" class="img-fluid rounded-start" alt="Product Image" width="100%">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
                    <p class="card-text">
                        <dl class="row">
                            <dt class="col-sm-4">ID</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                            <dt class="col-sm-4">Weight</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Weight)</dd>

                            <dt class="col-sm-4">Stock</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Stock)</dd>

                            <dt class="col-sm-4">Price</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                            <dt class="col-sm-4">Category ID</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryID)</dd>
                        </dl>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
@*         @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning btn-sm" })
 *@        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
    </div>
</div>
